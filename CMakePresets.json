{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "POSIX",
      "hidden": true,
      "generator": "Ninja"
    },
    {
      "name": "DEBUG",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "DEBUG": "ON"
      }
    },
    {
      "name": "RELEASE",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },

    {
      "name": "RPG",
      "hidden": true,
      "cacheVariables": {
        "GAME": "RPG"
      }
    },
    {
      "name": "MINE",
      "hidden": true,
      "cacheVariables": {
        "GAME": "MINE"
      }
    },
    {
      "name": "CuZn",
      "hidden": true,
      "cacheVariables": {
        "GAME": "CuZn"
      }
    },

    {
      "name": "RPG-POSIX-DEBUG",
      "inherits": ["POSIX", "DEBUG", "RPG"],
      "binaryDir": "build/RPG-DEBUG"
    },
    {
      "name": "RPG-POSIX-RELEASE",
      "inherits": ["POSIX", "RELEASE", "RPG"],
      "binaryDir": "build/RPG-RELEASE"
    },
    {
      "name": "RPG-WIN-DEBUG",
      "inherits": ["DEBUG", "RPG"],
      "binaryDir": "build/RPG-DEBUG"
    },
    {
      "name": "RPG-WIN-RELEASE",
      "inherits": ["RELEASE", "RPG"],
      "binaryDir": "build/RPG-RELEASE"
    },

    {
      "name": "MINE-POSIX-DEBUG",
      "inherits": ["POSIX", "DEBUG", "MINE"],
      "binaryDir": "build/MINE-DEBUG"
    },
    {
      "name": "MINE-POSIX-RELEASE",
      "inherits": ["POSIX", "RELEASE", "MINE"],
      "binaryDir": "build/MINE-RELEASE"
    },
    {
      "name": "MINE-WIN-DEBUG",
      "inherits": ["DEBUG", "MINE"],
      "binaryDir": "build/MINE-DEBUG"
    },
    {
      "name": "MINE-WIN-RELEASE",
      "inherits": ["RELEASE", "MINE"],
      "binaryDir": "build/MINE-RELEASE"
    },

    {
      "name": "CuZn-POSIX-DEBUG",
      "inherits": ["POSIX", "DEBUG", "CuZn"],
      "binaryDir": "build/CuZn-DEBUG"
    },
    {
      "name": "CuZn-POSIX-RELEASE",
      "inherits": ["POSIX", "RELEASE", "CuZn"],
      "binaryDir": "build/CuZn-RELEASE"
    },
    {
      "name": "CuZn-WIN-DEBUG",
      "inherits": ["DEBUG", "CuZn"],
      "binaryDir": "build/CuZn-DEBUG"
    },
    {
      "name": "CuZn-WIN-RELEASE",
      "inherits": ["RELEASE", "CuZn"],
      "binaryDir": "build/CuZn-RELEASE"
    }
  ]
}